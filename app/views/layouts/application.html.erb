<!DOCTYPE html>
<html>
  <head>
    <title>MiniCapstone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Alianazon</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
            <li><a href="#">Link</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sort by <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/products?sort_by=price&order=asc">Price</a></li>
                <li><a href="/products?sort_by=price&order=desc">Price Descending</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/products?sort_by=discount">Discount Items</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/products/random">Random Product</a></li>
              </ul>
            </li>
          </ul>
          <%= form_tag "/products", method: :get, :class => "navbar-form navbar-left" do %>
          <!-- <form class="navbar-form navbar-left"> -->
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search" name="product_name">
            </div>
            <button type="submit" class="btn btn-default">Search!</button>
          </form>
          <% end %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Link</a></li>
            <li class="dropdown">
              <% if session[:user_id] %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
              <% else%>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Guest<span class="caret"></span></a>
              <% end %>
              <ul class="dropdown-menu">
                <% if session[:user_id] %>
                  <li><a href="/logout"> Logout</a></li>
                <% else %>
                  <li><a href="/login">Login</a></li>
                  <li><a href="/signup">Create An Account!</a></li>
                <% end %>
                <!-- <li><a href="#">Something else here</a></li> -->
                <!-- <li role="separator" class="divider"></li> -->
                <!-- <li><a href="#">Separated link</a></li> -->
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
